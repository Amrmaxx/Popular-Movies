<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/margin_or_padding_medium"
    android:paddingTop="@dimen/margin_or_padding_medium">

    <TextView
        android:id="@+id/review_author_TV"
        style="@style/HeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/margin_or_padding_small"
        tools:text="author" />

    <TextView
        android:id="@+id/review_content_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/review_author_TV"
        android:layout_below="@+id/review_author_TV"
        android:layout_marginStart="@dimen/margin_or_padding_medium"
        android:ellipsize="end"
        android:lines="3"
        android:textColor="@color/colorPrimaryDark"
        tools:text="content" />


</RelativeLayout>